{
    "compilerOptions": {
        "allowJs": false,
        "baseUrl": "./",
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "module": "commonjs",
        "noImplicitAny": false,
        "noLib": false,
        "noUnusedLocals": false,
        "removeComments": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "target": "ES2015"
    },
    "include": [
        "src/*.ts",
        "src/**/*.ts"
    ],
    "exclude": [
        "src/**/*.spec.ts"
    ]
}
